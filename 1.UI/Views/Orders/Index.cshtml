<p>
    @Html.ActionLink("הוסף הזמנה חדשה", "CreateNew", "Orders")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("שם פרטי")
        </th>
        <th>
            @Html.Label("שם משפחה")
        </th>
        <th>
            @Html.Label("מגדר")
        </th>
        <th>
            @Html.Label("כתובת דואר אלקטרוני")
        </th>
        <th>
            @Html.Label("תמונה")
        </th>
        <th>
            @Html.Label("יצרן")
        </th>
        <th>
            @Html.Label("דגם")
        </th>
        <th>
            @Html.Label("שנת יצור")
        </th>
        <th>
            @Html.Label("קילומטרז")
        </th>
      
        <th>
            @Html.Label("מספר רישוי")
        </th>
        <th>
            @Html.Label("מספר סניף")
        </th>
        <th>
            @Html.Label("מספר הזמנה")
        </th>
        <th>
            @Html.Label("מספר לקוח")
        </th>
        <th>
            @Html.Label("תאריך יציאה")
        </th>
        <th>
            @Html.Label("תאריך חזרה")
        </th>
        <th>
            @Html.Label("תאריך חזרה בפועל")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.First_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Last_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.E_mail)
        </td>
        <td>
            <img src="~/Content/Images/@item.Picture" style="height:100px; width:100px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year_of_Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mileage)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.C_License_number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Taking_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Return_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actual_return_Date)
        </td>
        <td>
            @Html.ActionLink("עריכת פרטי הזמנה", "EditOrder", new {  id=item.OrderID  }) |
            @Html.ActionLink("מחיקת הזמנה", "DeleteOrder", new {  id=item.OrderID })
        </td>
    </tr>
}

</table>
